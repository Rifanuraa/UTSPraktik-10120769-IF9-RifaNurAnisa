<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:backgroundTint="#EFF2F3"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Banner-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/banner"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/white"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/banner" />


        </com.google.android.material.card.MaterialCardView>

        <!-- Pelaksanaan -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pelaksanaan"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Pelaksanaan PPDB Tahap 1 - 2023"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/elevatedButton"
                        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                        android:layout_width="68dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="40dp"
                        android:backgroundTint="#E6F6EC"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="3dp"
                        android:text="Detail"
                        android:textColor="#16A75C"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_detail"
                        app:iconPadding="3dp"
                        app:iconSize="12dp"
                        app:iconTint="#16A75C" />

                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_line1" />

                    <ImageView
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="225dp"
                        android:src="@drawable/ic_line2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_pelaksanaan1" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_pelaksanaan2" />

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt1"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="17 Mei - 05 Juni 2023"
                        android:textColor="#616161"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="215dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="224dp"
                        android:fontFamily="@font/roboto"
                        android:text="Persiapan"
                        android:textColor="#212121"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </RelativeLayout>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Pengumuman-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Pengumuman"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_pengumuman"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Pengumuman Hasil Seleksi"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    style="?attr/materialCardViewFilledStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFF2F4"
                    android:layout_marginTop="10dp"
                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/p1"
                            android:layout_marginTop="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anda dinyatakan diterima di"
                            android:textColor="#F44336"
                            />

                        <Button
                            android:id="@+id/btn_pengumuman"
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            android:layout_width="68dp"
                            android:layout_height="48dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginEnd="13dp"
                            android:backgroundTint="#16A75C"
                            android:paddingLeft="8dp"
                            android:paddingTop="3dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="3dp"
                            android:text="Detail"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:icon="@drawable/ic_detail"
                            app:iconPadding="3dp"

                            app:iconSize="12dp"
                            app:iconTint="@color/white" />

                        <TextView
                            android:layout_below="@id/p1"
                            android:id="@+id/p2"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SMA Negeri 1 Bojonggede"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:layout_below="@id/p2"
                            android:id="@+id/p3"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jalur Prestasi Kejuaraan"

                            />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!--Layanan PPDB-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Layanan"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_layanan"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="304dp"
                    android:layout_height="22dp"
                    android:layout_weight="700"
                    android:fontFamily="@font/roboto"
                    android:text="Layanan PPDB"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/vector"
                        android:padding="4dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kota Bandung"
                        android:textColor="#16A75C"
                        android:textSize="12sp"
                        />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</ScrollView>

